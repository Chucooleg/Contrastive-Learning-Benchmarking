{
    "seed": 42,

    "batch_size": 1024,
    "max_epochs":20000000000,
    "val_every_n_epoch": 1200,

    "d_model": 512,
    "embed_dropout": 0.0,
    "vec_repr": 64,

    "model": "generative",

    "d_ff":1024,
    "N_enc": 4,
    "num_heads": 4,
    "N_enc_key":4,
    "num_heads_key":2,
    
    "attn_wt_tying_scheme": "untie_QKVO",
    "attn_wt_dropout": 0.0,
    "heads_dropout": 0.0,
    "pff_dropout": 0.0,
    "representation_pos": 0,

    "dotproduct_bottleneck": true,
    "normalize_dotproduct": false,
    "contrastive_use_infoNCE": true,
    "loss_temperature_const": 1.0,
    "loss_smoothing_const": 0.1,
    "nonlinear_classifier_scale_down_factor": [1,1,1],

    "contrastive_optimizer": "cosine_annealing",
    "generative_optimizer": "cosine_annealing",
    "cosine_annealing_T_max": 300,

    "adam_lr": 1e-04,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "adam_epsilon": 1e-08,
    "adam_weight_decay":0,

    "sgd_lr": 0.001,
    "sgd_momentum":0,

    "scheduled_adam_beta1": 0.9,
    "scheduled_adam_beta2": 0.98,
    "scheduled_adam_epsilon": 1e-06,
    "scheduled_adam_warmup_steps": 240000,

    "additional_lr_decay": true,
    "additional_lr_decay_gamma": 0.9,
    "decay_lr_starts": 240000,
    "decay_lr_stops": 600000,
    "decay_lr_interval": 2000,
    "generative_overall_lr_scale": 1.0,
    "contrastive_overall_lr_scale": 1.0,

    "gradient_clip_val": 0.0,

    "debug":false,
    "extra_monitors":false
}